{{#if comments}}
<div id="sidebar_intro"><h2>{{count comments}} reacties van {{count commentsAnalysis.frequencyCount}} volgers</h2></div>
<div>
	<h4>Het meest actief in deze discussie</h4> 

	{{#each (limit commentsAnalysis.frequencyCount 6) as |participant|}}
		<div class="deelnemer" onclick="dialoog.highlightParticipant('{{sluggify participant.name}}')">
			<span>{{participant.name}}</span> 
			<span class="aantal">{{participant.count}}</span>
		</div>
	{{/each}}

	<h4>Bijdragen redactie</h4>

	{{#each (limit commentsAnalysis.replyCount 6) as |participant|}}
		<div class="deelnemer projectteam" onclick="dialoog.highlightParticipant('{{sluggify participant.name}}');">
			<span>{{participant.name}}</span> 
			<span class="aantal">{{participant.count}}</span>
		</div>
	{{/each}}
</div>


