{
  "name": "sg-core",
  "version": "1.0.0",
  "description": "Core static site generator",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "NODE_ENV=production node index.js",
    "start:dev": "nodemon --inspect index.js --config nodemon.json",
    "sync": "NODE_ENV=production node tasks/sync.js",
    "sync:dev": "node --inspect tasks/sync.js",
    "bulkrender": "NODE_ENV=production node tasks/bulkrender.js",
    "bulkrender:dev": "node --inspect tasks/bulkrender.js",
    "serve": "concurrently \"gulp serve\" \"gulp js-watch\" \"gulp scss-watch\"",
    "style": "cd pages && gulp scss-compile",
    "scripts": "cd pages && gulp js-compile",
    "copy-assets": "cd pages && gulp copy-assets",
    "watch-templates": "npm-watch bulkrender:dev",
    "check-links": "NODE_ENV=production node tasks/checklinks.js"
  },
  "watch": {
    "bulkrender:dev": {
      "extensions": "handlebars",
      "patterns": [
        "pages/templates/**/"
      ],
      "quiet": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://ZuidasTT@bitbucket.org/zuidas/sg-core.git"
  },
  "author": "Tom Timmerman",
  "license": "ISC",
  "homepage": "https://bitbucket.org/zuidas/sg-core#readme",
  "dependencies": {
    "algoliasearch": "^3.21.1",
    "babel-preset-es2015": "6.24.1",
    "bluebird": "^3.5.0",
    "body-parser": "^1.16.1",
    "check-links": "^1.1.4",
    "cors": "^2.8.1",
    "express": "^4.14.1",
    "feed": "^2.0.1",
    "get-urls": "^8.0.0",
    "gulp-contrib-copy": "0.1.3",
    "gulp-file": "0.3.0",
    "gulp-plumber": "1.1.0",
    "gulp-uglifyjs": "0.6.2",
    "handlebars": "^4.0.6",
    "html-minifier": "^3.4.0",
    "joi": "^14.0.4",
    "lodash": "^4.17.11",
    "mkdirp": "^0.5.1",
    "moment": "^2.19.2",
    "mongodb": "^2.2.31",
    "readdir-enhanced": "^2.2.2",
    "requestify": "^0.2.5",
    "rimraf": "^2.6.0",
    "url-check": "0.0.1",
    "uuid": "^3.1.0",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.4"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.6",
    "concurrently": "^3.5.0",
    "cssnano": "^4.1.7",
    "gulp": "^3.9.1",
    "gulp-babel": "6.1.2",
    "gulp-concat": "^2.6.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "1.2.2",
    "gulp-sass": "^4.0.2",
    "gulp-sequence": "^0.4.6",
    "gulp-task-loader": "^1.4.4"
  }
}
